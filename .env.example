# Telegram Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Spotify Configuration
# Create an app at https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback
SPOTIFY_PLAYLIST_ID=your_playlist_id_here
SPOTIFY_USERNAME=your_spotify_username

# Chat Control
# Comma-separated list of allowed chat IDs (get from @userinfobot)
# For groups, the ID will be negative (e.g., -1001234567890)
ALLOWED_CHAT_IDS=-1001234567890,-1009876543210

# Bot Behavior
# Set to True to send confirmation messages when tracks are added
ENABLE_CONFIRMATION_MESSAGES=False
# Set to True to send error messages to the chat
ENABLE_ERROR_MESSAGES=True

# Webhook Settings
# For local development with ngrok: https://your-id.ngrok.io/webhook
# For production: https://your-domain.com/webhook
WEBHOOK_URL=https://your-domain.com/webhook

# Server Settings
APP_HOST=0.0.0.0
APP_PORT=8000
